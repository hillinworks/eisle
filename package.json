{
  "name": "eisle",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run build-ts && npm run tslint && npm run copy-static-assets",
    "serve": "nodemon ./bin/www",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve\"",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "node copyStaticAssets.js",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect ./bin/www",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hillinworks/eisle.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hillinworks/eisle/issues"
  },
  "homepage": "https://github.com/hillinworks/eisle#readme",
  "dependencies": {
    "@types/sha1": "^1.1.0",
    "@types/xml2js": "^0.4.0",
    "body-parser": "^1.18.2",
    "concurrently": "^3.5.0",
    "cookie-parser": "^1.4.3",
    "errorhandler": "^1.5.0",
    "express": "^4.16.2",
    "method-override": "^2.3.10",
    "mongoose": "^4.12.2",
    "morgan": "^1.9.0",
    "pug": "^2.0.0-rc.4",
    "sha1": "^1.1.1",
    "shelljs": "^0.7.8",
    "tslint": "^5.7.0",
    "xml2js": "^0.4.19"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.5",
    "@types/cookie-parser": "^1.4.1",
    "@types/errorhandler": "0.0.31",
    "@types/method-override": "0.0.30",
    "@types/mongodb": "^2.2.13",
    "@types/morgan": "^1.7.33",
    "nodemon": "^1.12.1",
    "typescript": "^2.5.3"
  }
}
